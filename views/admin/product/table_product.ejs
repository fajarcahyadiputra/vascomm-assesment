
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr class="text-center">
                <th>No</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr class="text-center">
                <th>No</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </tfoot>
        <tbody>
            <% for(let i = 0; i < product.length; i++){ %>
                <tr class="text-center">
                    <td><%= i+1 %></td>
                    <td><%= product[i].name %></td>
                    <td><%= product[i].slug %></td>
                    <td><%= rupiah(product[i].price) %></td>
                    <td><img src="<%= baseurl %><%= product[i].image %>" width="150" alt="Image Of product"></td>
                    <td>
                        <button id="btn-edit" data-id="<%= product[i].id %>" data-name="<%= product[i].name %>" data-price="<%= product[i].price %>" class="btn btn-info btn-sm btn-circle"><i class="fa fa-edit"></i></button>
                        <button  id="btn-delete" data-id="<%= product[i].id %>" class="btn btn-danger btn-sm btn-circle"><i class="fa fa-trash"></i></button>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

